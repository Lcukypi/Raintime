<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.itlanbao.Raintime.viewpager.BannerViewPager
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </com.itlanbao.Raintime.viewpager.BannerViewPager>
            <TextView
                android:id="@+id/tv_product1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/banner"
                android:drawableLeft="@drawable/icon_procduct1"
                android:text="卷盘式喷灌机"
                android:textSize="20sp"/>
            <LinearLayout
                android:id="@+id/layout_product1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_product1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_product1_1"
                        android:layout_width="match_parent"
                        android:layout_height="147dp"
                        android:src="@mipmap/picture_product1_1"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="评价：800"
                        android:textColor="#ff0000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/iv_product1_2"
                        android:layout_width="match_parent"
                        android:layout_height="129dp"
                        android:src="@mipmap/picture_product1_2"
                        android:layout_weight="1.22"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="评价：1600"
                        android:textColor="#ff0000"/>
                </LinearLayout>

            </LinearLayout>






            <TextView
                android:id="@+id/tv_product2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/icon_procduct2"
                android:layout_below="@id/layout_product1"
                android:text="植保无人机"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_product2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <ImageView
                        android:id="@+id/iv_product2_1"
                        android:layout_width="170dp"
                        android:layout_height="128dp"
                        android:src="@mipmap/picture_product2_1"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="评价：1200"
                        android:textColor="#ff0000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="328dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/iv_product2_2"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:src="@mipmap/picture_product2_2"
                        android:layout_weight="0.05"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="评价：2400"
                        android:textColor="#ff0000"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</LinearLayout>
